# Template file for 'st'
pkgname=st
version=999
revision=1
build_style=gnu-makefile
make_use_env=compliant
hostmakedepends="pkg-config"
makedepends="fontconfig-devel libX11-devel libXft-devel"
depends="ncurses st-terminfo-${version}_${revision}"
short_desc="Simple terminal implementation for X"
maintainer="Anjan Momi <anjan@momi.ca>"
license="MIT"
homepage="https://st.suckless.org"
distfiles="https://github.com/LukeSmithxyz/st/archive/master.zip"
checksum=de65c0f8a4b332261cba68aa4d6d5cc7e2aff00fe3736f10f4239326e46e67eb
wrksrc=st-master

pre_build() {
#	sed -i 's|Liberation Mono|Monospace|g' config.def.h
#	[ -e ${FILESDIR}/config.h ] && cp ${FILESDIR}/config.h config.h
	# We will use tic after install. See INSTALL.
	sed -i '/tic/d' Makefile
}

post_install() {
	vinstall st.info 644 usr/share/terminfo/s st.terminfo
	vdoc README.md
	vlicense LICENSE
}

st-terminfo_package() {
	short_desc+=" - terminfo data"
	archs=noarch
	pkg_install() {
		vmove usr/share/terminfo
	}
}
